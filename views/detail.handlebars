<h1 class="mb-1 restaurantrant-show-title">{{ Restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ Restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ Restaurant.location }}
        <a href="{{ Restaurant.google_map }}v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ Restaurant.phone }}
      </p>

      <p class="mb-5">
        {{ Restaurant.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ Restaurant.image }}" alt="{{ Restaurant.name }}"
        style="max-width: 600px;">

      <div class="d-flex justify-content-center">

        <form class="" action="/restaurant/{{ Restaurant._id }}/edit" method="get">
          <button class="update-btn btn btn-info m-3">修改內容</button>
        </form>

        <form class="" action="/restaurant/{{ Restaurant._id }}?_method=DELETE" method="post">
          <button class="delete-btn btn btn-danger m-3">刪除餐廳</button>
        </form>

      </div>

    </div>
  </div>
</div>